<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
				   xmlns:s="library://ns.adobe.com/flex/spark" 
				   xmlns:mx="library://ns.adobe.com/flex/mx"
				   width="100%"
				   minHeight="14">
	<fx:Script>
		<![CDATA[
			import spark.filters.DropShadowFilter;
			import flash.filters.BitmapFilterQuality;

			public function set text(value:String):void
			{
				infoText.text = value;
			}
			
		]]>
	</fx:Script>
	
	<fx:Declarations>
		
	</fx:Declarations>
	
	<s:layout>
		<s:BasicLayout />
	</s:layout>
	
	
	<s:BorderContainer borderColor="#DF1D10"
					   borderStyle="solid"
					   borderWeight="1"
					   backgroundColor="#EE735C"
					   color="#FFFFFF"
					   minHeight="14"
					   width="100%">
		<s:layout>
			<s:VerticalLayout gap="5" 
							  paddingTop="7"
							  paddingBottom="7"
							  paddingLeft="7"
							  paddingRight="7"/>
		</s:layout>
		
		
		<!-- <s:Label text="ERROR" /> -->
		
		<mx:Text id="infoText" color="#FFFFFF" minHeight="14"/>
		
	</s:BorderContainer>
	
</s:Group>
