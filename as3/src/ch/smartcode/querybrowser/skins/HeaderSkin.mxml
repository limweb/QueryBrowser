<!--- The default skin class for a Spark SkinnableContainer container.  

     @see spark.components.SkinnableContainer
        
      @langversion 3.0
      @playerversion Flash 10
      @playerversion AIR 1.5
      @productversion Flex 4
-->
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" 
    xmlns:fb="http://ns.adobe.com/flashbuilder/2009" alpha.disabled="0.5">

    <fx:Metadata>
    <![CDATA[ 
        /** 
         * @copy spark.skins.spark.ApplicationSkin#hostComponent
         */
        [HostComponent("ch.smartcode.querybrowser.views.HeaderView")]
    ]]>
    </fx:Metadata> 
    
    <s:states>
        <s:State name="normal" />
        <s:State name="disabled" />
    </s:states>
    
    <!--- Defines the appearance of the SkinnableContainer class's background. -->
    <s:Rect id="background" left="0" right="0" top="0" bottom="0">
		<s:fill>
			<s:LinearGradient rotation="90">
				<s:entries>
					<s:GradientEntry color="0xececec" ratio=".1" alpha="1"/>
					<s:GradientEntry color="0xb2b2b2" ratio=".9" alpha="1"/>
				</s:entries>
			</s:LinearGradient>  
		</s:fill>
    </s:Rect>
    
    <!--
        Note: setting the minimum size to 0 here so that changes to the host component's
        size will not be thwarted by this skin part's minimum size.   This is a compromise,
        more about it here: http://bugs.adobe.com/jira/browse/SDK-21143
    -->
    <!--- @copy spark.components.SkinnableContainer#contentGroup -->
    <s:Group id="contentGroup" left="10" right="0" top="0" bottom="0" minWidth="0" minHeight="0">
		<s:layout>
			<s:HorizontalLayout verticalAlign="middle"/>
		</s:layout>
		
		<s:Label text="{hostComponent.headerLabel}" 
				 styleName="applicationLabel"
				 verticalCenter="0"/>
    </s:Group>
	
	<!-- border bottom -->
	<s:Line id="borderBottom" bottom="0" left="0" right="0">
		<s:stroke>
			<s:SolidColorStroke color="0x696969" weight="1"/>
		</s:stroke>
	</s:Line>

</s:Skin>
